$(document).ready(function(){
  $("li1").click(function(){
    $("li11").find(".box").toggle();
  });
});
$(document).ready(function(){
  $("li2").click(function(){
    $("li22").find(".box").toggle();
  });
});
$(document).ready(function(){
  $("li3").click(function(){
    $("li33").find(".box").toggle();
  });
});
$(document).ready(function(){
  $("li4").click(function(){
    $("li44").find(".box").toggle();
  });
});
$(document).ready(function(){
  $("li5").click(function(){
    $("li55").find(".box").toggle();
  });
});
</script>

</body>
</html>